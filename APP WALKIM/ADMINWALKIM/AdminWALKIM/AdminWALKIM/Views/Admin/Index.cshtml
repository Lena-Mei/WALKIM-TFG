@{
}

@model List<AdminWALKIM.Models.Administrador>

<h3>Listado Administradores</h3>
<table class="table">
    <thead>
        <tr>
            <th>ID Administrador</th>
            <th>Correo</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var admin in Model)
        {
            <tr>
                <td>@admin.idAdministrador</td>
                <td>@admin.correo</td>
                <td>@admin.nombre</td>
                <td>@admin.apellido1 @admin.apellido2</td>
                <td><a class="btn btn-warning" href="@Url.Action("Editar", "Admin", new{idAdmin = admin.idAdministrador})">Editar</a></td>
            </tr>
        }
    </tbody>
</table>