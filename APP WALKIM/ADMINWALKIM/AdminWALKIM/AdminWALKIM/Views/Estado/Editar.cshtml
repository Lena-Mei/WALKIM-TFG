@{
}

@model AdminWALKIM.Models.Estado

<h1>Editar estado: @Model.nombre </h1>

<form asp-action="Editar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label asp-for="nombre" class="control-label fw-bold">Nombre:</label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12">
            <div class="form-group">
                <label asp-for="descripcion" class="control-label fw-bold">Descripcion:</label>
                <input asp-for="descripcion" class="form-control" />
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group" hidden>
        <input asp-for="idEstado" class="form-control" />
    </div>
    <div class="col-12">
        @if (ViewData["error"] != null)
        {
            <p class="alert alert-danger" style="margin-top:10px;">@ViewData["error"]</p>
        }
        @if (ViewData["correcto"] is true)
        {
            <p class="alert alert-success" style="margin-top:10px;">Se han guardado correctamente los datos</p>
        }
    </div>
    <div class="col-6" style="margin-top:10px;">
        <div class="form-group">
            <input type="submit" value="Actualizar mascota" class="btn btn-primary" />
        </div>
    </div>
</form>
