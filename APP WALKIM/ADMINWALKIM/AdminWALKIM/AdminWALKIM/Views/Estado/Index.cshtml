@{
}
@model List<AdminWALKIM.Models.Estado>

<h1>Listado Estados</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID Estado</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var estado in Model)
        {
            <tr>
                <th>@estado.idEstado</th>
                <td>@estado.nombre</td>
                <td>@estado.descripcion</td>
                <td><a class="btn btn-warning" href="@Url.Action("Editar","Estado", new{idEstado=estado.idEstado})">Editar</a></td>
            </tr>
        }
    </tbody>
</table>
