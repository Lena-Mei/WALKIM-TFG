
@model WALKIM.Models.Usuario
<div class="row justify-content-center">
    <div class="col-md-4">
        <h2 class="text-center">Iniciar Sesión</h2>
        <hr />
        <form asp-action="IniciarSesion">
            <div class="form-group">
                <label class="form-label fw-bold">Usuario:</label> <br />
                <input asp-for="correo" class="form-control" />
            </div>
            <div class="form-group">
                <label class="form-label fw-bold">Contraseña:</label><br />
                <input asp-for="contrasenya" class="form-control" />
            </div>
            <div class="col-12 d-grid" style="margin-top:10px;">
                <input type="submit" value="Login" class="btn btn-outline-secondary" />
            </div>
        </form>

        @if (ViewData["errorMensaje"] != null)
        {
            <p class="alert alert-danger" style="margin-top:10px;">@ViewData["errorMensaje"]</p>
        }

        <div class="col-12">
            <p>¿No tienes cuenta? <a class="link-primary" href="@Url.Action("ElegirRol", "Login")">Crear una</a> </p>
        </div>

    </div>
</div>


